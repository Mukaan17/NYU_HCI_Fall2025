# ============================================
# VioletVibes Backend Environment Variables
# ============================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!

# ============================================
# REQUIRED VARIABLES
# ============================================

# JWT Secret Key
# Generate a secure secret using: python -c "import secrets; print(secrets.token_urlsafe(32))"
# Must be set in all environments for security
JWT_SECRET=your-secret-key-here-change-in-production

# Google Gemini API Key
# Required for chat functionality
# Get your key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# Database Connection String
# Required in production, optional in development (defaults to SQLite)
# Format: postgresql://user:password@host:port/database?sslmode=require
# Example: postgresql://user:pass@db.example.com:5432/violetvibes?sslmode=require
# Leave empty for development (uses SQLite)
DATABASE_URL=

# ============================================
# OPTIONAL VARIABLES
# ============================================

# Google Maps API Key
# Used for places, geocoding, and directions services
# Get your key from: https://console.cloud.google.com/apis/credentials
GOOGLE_API_KEY=your-google-maps-api-key-here

# OpenWeather API Key
# Used for weather data
# Get your key from: https://openweathermap.org/api
OPENWEATHER_KEY=your-openweather-api-key-here

# Redis Connection String
# Optional but recommended for production
# Used for rate limiting, caching, and conversation context storage
# Format: redis://user:password@host:port/database
# Example: redis://default:password@redis.example.com:6379/0
# If not set, uses in-memory storage (not shared across workers)
REDIS_URL=

# CORS Allowed Origins
# Comma-separated list of allowed frontend origins
# Required in production, defaults to localhost in development
# Example: https://your-frontend.com,https://another-domain.com
ALLOWED_ORIGINS=

# Environment Mode
# Values: development, production, prod
# Defaults to development if not set
FLASK_ENV=development
# Alternative to FLASK_ENV
ENVIRONMENT=development

# Logging Level
# Values: DEBUG, INFO, WARNING, ERROR
# Defaults to DEBUG in development, INFO in production
LOG_LEVEL=DEBUG

# Server Port
# Defaults to 5001 in development
# Automatically set by App Platform in production
PORT=5001

# Initialize Database on Startup
# Set to "true" to run db.create_all() on startup
# Defaults to false
INIT_DB=false
